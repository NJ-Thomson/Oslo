; NVT equilibration with position restraints
integrator          = md
dt                  = 0.002
nsteps              = 50000  ; 0.1 ns

; Output control
nstlog              = 1000
nstenergy           = 1000
nstxout-compressed  = 5000

; Neighbor searching
cutoff-scheme       = Verlet
nstlist             = 20
pbc                 = xyz

; Electrostatics
coulombtype         = PME
rcoulomb            = 1.0
fourierspacing      = 0.12

; VdW
vdwtype             = Cut-off
rvdw                = 1.0
DispCorr            = EnerPres

; Temperature coupling
tcoupl              = V-rescale
tc-grps             = Protein Non-Protein
tau_t               = 0.1 0.1
ref_t               = 300.0 300.0

; Pressure coupling (off for NVT)
pcoupl              = no

; Velocity generation
gen_vel             = yes
gen_temp            = 300.0
gen_seed            = -1

; Constraints
constraints         = h-bonds
constraint_algorithm = LINCS
lincs_iter          = 1
lincs_order         = 4

; Position restraints (if present in topology)
define              = -DPOSRES
