; NVT equilibration for stability test
; 100 ps with position restraints

;----------------------------------------------------
; RUN CONTROL
;----------------------------------------------------
define       = -DPOSRES
integrator   = sd
nsteps       = 50000         ; 100 ps
dt           = 0.002
comm-mode    = Linear
nstcomm      = 50

;----------------------------------------------------
; OUTPUT CONTROL
;----------------------------------------------------
nstxout                = 0
nstvout                = 0
nstfout                = 0
nstxout-compressed     = 5000
compressed-x-precision = 1000
nstlog                 = 1000
nstenergy              = 1000

;----------------------------------------------------
; BONDS
;----------------------------------------------------
constraint_algorithm   = lincs
constraints            = h-bonds
lincs-iter             = 1
lincs-order            = 6
lincs-warnangle        = 30
continuation           = no

;----------------------------------------------------
; NEIGHBOR SEARCHING
;----------------------------------------------------
cutoff-scheme       = Verlet
ns-type             = grid
nstlist             = 10
rlist               = 1.2
pbc                 = xyz

;----------------------------------------------------
; ELECTROSTATICS
;----------------------------------------------------
coulombtype      = PME
rcoulomb         = 1.0
ewald_geometry   = 3d
pme-order        = 4
fourierspacing   = 0.10
ewald-rtol       = 1e-6

;----------------------------------------------------
; VDW
;----------------------------------------------------
vdwtype                 = Cut-off
vdw-modifier            = Potential-shift-Verlet
verlet-buffer-tolerance = 0.005
rvdw                    = 1.0
DispCorr                = EnerPres

;----------------------------------------------------
; TEMPERATURE COUPLING (SD ==> Langevin dynamics)
;----------------------------------------------------
tc-grps    = System
tau-t      = 2.0
ref-t      = 298.15

;----------------------------------------------------
; PRESSURE COUPLING
;----------------------------------------------------
pcoupl     = no

;----------------------------------------------------
; VELOCITY GENERATION
;----------------------------------------------------
gen-vel      = yes
gen-seed     = -1
gen-temp     = 298.15
